<!DOCTYPE html>
<html lang="en">

<head>
    {{template "head" "Profile"}}
</head>

<body>

    {{template "topbar"}}

    {{template "header" .TemplateSessionData}}

    <main id="main">
    
    {{template "breadcrumbs" "Profile"}}
    
    <section class="appointment section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Welcome</h2>
                <p>Welcome our valued patient, you can edit your data here.</p>
            </div>

            <form action="/profile" method="post" role="form" class="medilab-form">
                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="firstname" class="form-label">First Name</label>
                        <input id="firstname" type="text" name="firstname" class="form-control" placeholder="First Name" required value="{{.Patient.Firstname}}">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="lastname" class="form-label">Last Name</label>
                        <input id="lastname" type="text" name="lastname" class="form-control" placeholder="Last Name" required value="{{.Patient.Lastname}}">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="age" class="form-label">Age</label>
                        <input id="age" type="number" class="form-control" name="age" placeholder="Your Age" required value="{{.Patient.Age}}">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" type="email" class="form-control" name="email" placeholder="Your Email" required value="{{.Patient.Email}}">
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="username" class="form-label">Username</label>
                        <input id="username" type="text" name="username" class="form-control" placeholder="Username" required value="{{.Patient.Username}}" disabled aria-describedby="unameHelp">
                        <div id="unameHelp" class="form-text">You cannot change usernames.</div>
                    </div>
                </div>
                
                <div class="text-center"><button type="submit">Save</button></div>
            </form>

        </div>
    </section>

    <section class="appointment section-bg">
        <div class="container">

            <div class="section-title">
                <p>Change password here</p>
            </div>

            <form action="/profile/password" class="medilab-form" method="post">
                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="oldpassword" class="form-label">Old Password</label>
                        <input id="oldpassword" type="password" name="oldpassword" class="form-control" placeholder="Old Password" required>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="col-md-8 form-group mt-3 mt-md-0">
                        <label for="newpassword" class="form-label">New Password</label>
                        <input id="newpassword" type="password" name="newpassword" class="form-control" placeholder="New Password" required>
                    </div>
                </div>

                <div class="text-center"><button type="submit">Save</button></div>
            </form>

        </div>
    </section>
    
    <section class="section-bg">
        <div class="section-title">
            <h2>Danger zone</h2>
        </div>

        <form action="/profile/delete" method="post" id="deletePassword">
            <div class="row justify-content-center">
                <div class="col-md-8 form-group mt-3 mt-md-0">
                    <label for="password" class="form-label">Enter your password to delete your account</label>
                    <input id="password" type="password" name="password" class="form-control" placeholder="Password" required aria-describedby="deleteHelp">
                    <div id="deleteHelp" class="form-text">This action cannot be undone</div>
                </div>
            </div>
        </form>

        <div class="text-center">
            <button type="submit" class="medilab-button" style="background: darkred" form="deletePassword">
                Delete account
            </button>
        </div>

    </section>

    </main>

    {{template "footer"}}

</body>

</html>